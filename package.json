{
  "name": "dagger-action",
  "version": "1.0.0",
  "description": "GitHub Action for Dagger with intelligent caching",
  "main": "dist/index.js",
  "scripts": {
    "build": "bun build src/main.ts --outfile dist/index.js --target node --format cjs --minify",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --write",
    "fmt": "biome format . --write",
    "fmt:check": "biome format ."
  },
  "keywords": [
    "dagger",
    "github-actions",
    "ci-cd",
    "cache"
  ],
  "license": "BSD-2-Clause-Patent",
  "dependencies": {
    "@actions/cache": "6.0.0",
    "@actions/core": "3.0.0",
    "@actions/exec": "3.0.0",
    "@actions/tool-cache": "4.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@types/node": "25.2.1",
    "typescript": "5.9.3",
    "bun-types": "1.3.8"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
